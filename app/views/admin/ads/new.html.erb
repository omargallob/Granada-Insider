<% content_for(:sub_menu) do %>
	<ul>
		<li><%= link_to "Back", :back %></li>
	</ul>
<% end %>


<div id="content">
	<h1>New ad</h1>
	<div style="float:left">	
	<hr />

	<% form_for :ad, @ad, :url => {:action => "create", :controller => "admin/ads"}, :html => { :multipart => true, :method => :post }  do |f| %>	
	<%= f.error_messages %> 
		<%= render :partial => "form", :locals => {:f =>f}%>
		<p>
		  <%= f.submit 'Create' %>
		</p>
	<% end %>
	</div>
</div>
<% content_for(:script) do %>

<%= render :partial => "shared/tinymce" %>
<% end %>
