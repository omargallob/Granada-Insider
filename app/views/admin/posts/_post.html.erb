<tr>
	
	<td><%= post.title %></td>

	<% if controller.action_name == "show" %>
		<td>
		<%= post.description  %>
		</td>
		<td>
		<%= post.created_at.strftime("%a %d %B %Y") %>
		</td>
	<% end %>
	<td>
	<table class="nolines">
		<tr>
			<td> <% if post.parent == nil %><%= link_to image_tag ('system/admin/buttons/search.jpg', :height => "15px", :title => t('options.show')), admin_post_path(post) %><% else %>
				<%= link_to image_tag ('system/admin/buttons/search.jpg', :height => "15px", :title => t('options.show')), "#" %>
			<% end %></td><td>&nbsp;|&nbsp;</td>
			<td><%= link_to image_tag ('system/admin/buttons/edit.jpg', :height => "15px", :title => t('options.edit')), edit_admin_post_path(post) %></td><td>&nbsp;|&nbsp;</td>
			<td><%= link_to image_tag ('system/admin/buttons/delete.jpg', :height => "15px", :title => t('options.delete')), admin_post_path(post), :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
	</table>
	</td>
</tr>
